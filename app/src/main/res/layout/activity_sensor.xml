<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SensorActivity">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/title_field"/>

    <TextView
        android:id="@+id/x_axis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="108dp"
        android:layout_marginBottom="21dp"
        android:text="X axis"
        app:layout_constraintBottom_toTopOf="@+id/z_axis"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="57dp" />

    <TextView
        android:id="@+id/y_axis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="13dp"
        android:text="Y axis"
        app:layout_constraintBottom_toTopOf="@+id/ay_axis"
        app:layout_constraintTop_toBottomOf="@+id/z_axis"
        tools:layout_editor_absoluteX="57dp" />

    <TextView
        android:id="@+id/z_axis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="21dp"
        android:text="Z axis"
        app:layout_constraintBottom_toTopOf="@+id/y_axis"
        app:layout_constraintTop_toBottomOf="@+id/x_axis"
        tools:layout_editor_absoluteX="57dp" />

    <TextView
        android:id="@+id/ax_axis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/x_axis"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="347dp"
        android:text="ax"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/az_axis"
        tools:layout_editor_absoluteX="80dp" />

    <TextView
        android:id="@+id/ay_axis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/y_axis"
        android:layout_centerHorizontal="true"
        android:text="ay"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="291dp" />

    <TextView
        android:id="@+id/az_axis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/z_axis"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="19dp"
        android:text="az"
        app:layout_constraintBottom_toTopOf="@+id/ax_axis"
        app:layout_constraintTop_toBottomOf="@+id/ay_axis"
        tools:layout_editor_absoluteX="80dp" />

    <TextView
        android:id="@+id/angle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ay_axis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="24dp"
        android:text="angle"
        app:layout_constraintBottom_toTopOf="@+id/anglexz"
        app:layout_constraintTop_toBottomOf="@+id/x_axis"
        tools:layout_editor_absoluteX="188dp" />

    <TextView
        android:id="@+id/anglexz"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@+id/angle"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="188dp"
        android:text="angle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/z_axis"
        app:layout_constraintTop_toBottomOf="@+id/angle" />

    <TextView
        android:id="@+id/angleyz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anglexz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="33dp"
        android:text="angle"
        app:layout_constraintBottom_toTopOf="@+id/angle"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="188dp" />

    <TextView
        android:id="@+id/txtMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="260dp"
        tools:layout_editor_absoluteY="80dp" />

</androidx.constraintlayout.widget.ConstraintLayout>